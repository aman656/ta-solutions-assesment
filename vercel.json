{
    "version": 2,
    "name": "currency-converter",
    "builds": [
      {
        "src": "backend/index.ts",
        "use": "@vercel/node",
        "config": { "includeFiles": ["**/*.ts", "**/*.json"] }
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/backend/index.ts" },
      { "src": "/(.*)", "dest": "/frontend/$1" }
    ]
  }
  